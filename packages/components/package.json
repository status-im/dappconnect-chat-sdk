    "storybook": "7.5.1",
    "storybook-addon-designs": "7.0.0-beta.1",
    "storybook-dark-mode": "^3.0.0",
    "vite": "^4.2.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "eslint",
      "prettier --write"
